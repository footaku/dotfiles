[core]
	autocrlf = false
	preloadindex = true
	fscache = true
	editor = code --wait
	ignorecase = false
	quotepath = false
[color]
	ui = true
[alias]
	st  = "!f () { ~/.config/scripts/git-status.bash; };f"
	fp  = fetch -p
	b   = branch -vv
	bd  = branch -d
	bdf = branch -D
	ch  = checkout
	cb  = checkout -b
	cm  = commit --allow-empty
	cp  = cherry-pick --allow-empty
	lo  = log --date=iso --pretty=format:'%Cred%ad%Creset %C(yellow)[%h]%Creset - %s' --abbrev-commit
	dn  = diff --name-status
	ds  = diff --staged
	mn  = merge --no-ff --no-edit
	mt  = mergetool
	sw  = switch
	unstage = reset HEAD
	detach = branch --unset-upstream
	attach = branch --set-upstream-to
